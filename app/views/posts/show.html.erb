<div class="panel panel-info">
  <div class="panel-heading">
    <h1 class="text-center"><%= @post.title %> <small>Posted on <%= @post.created_at.strftime("%d %b. %Y") %></small></h1>
    <p class="text-right">
      <%= link_to "Edit Post", edit_post_path(@post) %> |
      <%= link_to "Delete Post", post_path(@post),
                                :data => {:confirm => "Are you sure you want to delete this?",
                                          :method => "delete"} %>
    </p>
  </div>
  <div class="panel-body">
    <h4><%= @post.body %></h4>
  </div>
  <div class="panel-footer">
    <p>
      TAGS FOR THIS POST:
    </p>
    <p>
      <% @post.tags.order(name: :asc).each do |tag| %>
        <%= link_to tag.name, tag_path(tag) %>
      <% end %>
    </p>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="text-center">COMMENTS:</h4>
  </div>
  <ul class="list-group">
    <% @comments.order(created_at: :asc).each do |comment| %>
      <li class="list-group-item">
        <h5><%= comment.text %></h5>
        <p class="text-right">From <small>posted on <%= comment.created_at.strftime("%d %b. %Y") %></small></p>
      </li>
    <% end %>
  </ul>
</div>

<div class="container-fluid">
  <%= link_to "Add New Comment", new_post_comment_path(@post), class:"btn btn-default" %>
</div>

<div class="container-fluid">
  <%= link_to "Back", :back %>
</div>
