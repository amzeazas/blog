<div class="container-fluid">
  <div class="jumbotron">
    <h1>Nerdy Ramblings <small>Your portal into the happenings of the Nerd World</small></h1>
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">
    <h1 class="text-center">Posts</h1>
  </div>
  <ul class="list-group">
    <% @posts.each do |post| %>
    <li class="list-group-item"><h4><%= link_to post.title, post_path(post) %></h4></li>
    <% end %>
  </ul>
</div>

<div class="panel panel-success">
  <div class="panel-heading">
    <h1 class="text-center">Tags</h1>
  </div>
  <div class="panel-body">
    <h4>
      <% @tags.each do |tag| %>
        <%= link_to tag.name, tag_path(tag) %>
      <% end %>
    </h4>
  </div>
</div>
