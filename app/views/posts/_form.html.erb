<%= render "layouts/errors", :object => @post %>

<%= form_for @post, remote:true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body, "Post" %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :tag, "Tags" %>
    <%= f.select :tag_ids, Tag.all.collect {|t| [t.name, t.id]}, {}, :multiple => true, id:"tag_select", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= link_to "Add a New Tag", new_tag_path, class:"btn btn-success", id:"new_tag_button", remote:true %>
  </div>

  <%= f.submit "Save", class: "btn btn-info" %>
<% end %>

<div class="container-fluid">
  <%= link_to "Back", :back %>
</div>
