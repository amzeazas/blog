$('form').remove();
$('#new_comment_link').show();
$('ul p').remove();
$('#post_comments').append(<li class="list-group-item">
                           <h5><%= comment.text %></h5>
                           <p class="text-right">From <b><%= comment.user.username %></b> <small>posted on <%= comment.created_at.strftime("%d %b. %Y") %></small></p>
                           <% if user_signed_in? && comment.user == current_user %>
                             <p class="text-right">
                               <%= link_to "Edit Comment", edit_post_comment_path(@post, comment) %> |
                               <%= link_to "Delete Comment", post_comment_path(@post, comment),
                                                         :data => {:confirm => "Are you sure you want to delete this?",
                                                                   :method => "delete"} %>
                             </p>)
                            <% end %>
